<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameBiomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.biome.BiomeFragment">

    <ImageView
        android:id="@+id/imageBiome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/biome"
        android:scaleType="fitCenter"
        android:src="@drawable/replace_me_ocean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textBiomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/biome"
        app:layout_constraintEnd_toEndOf="@+id/imageBiome"
        app:layout_constraintStart_toStartOf="@+id/imageBiome"
        app:layout_constraintTop_toBottomOf="@+id/imageBiome" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentSpeciesList"
        android:name="de.moyapro.idleworldsim.app.ui.biome.SpeciesListFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBiomeView"
        tools:layout="@layout/fragment_species_list"/>


    <com.otaliastudios.zoom.ZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:hasClickableChildren="true">

        <de.blox.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lineColor="@android:color/holo_blue_dark"
            app:lineThickness="2dp"
            app:useMaxSize="true"/>
    </com.otaliastudios.zoom.ZoomLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
