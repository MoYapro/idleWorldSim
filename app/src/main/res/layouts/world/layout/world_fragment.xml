<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.MainActivity" android:id="@+id/frameBiomeLayout">
    <ImageView
            android:src="@drawable/replace_me_earth"
            android:layout_width="100dp"
            android:layout_height="100dp" android:id="@+id/imageWorld" android:scaleType="fitCenter"
            android:contentDescription="@string/world"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textWorldView"
            app:layout_constraintStart_toStartOf="@+id/imageWorld"
            app:layout_constraintTop_toBottomOf="@+id/imageWorld" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/imageWorld"/>
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:name="de.moyapro.idleworldsim.app.ui.world.BiomeListFragment"
            android:id="@+id/fragmentWorldList"
            app:layout_constraintTop_toBottomOf="@+id/textWorldView" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" tools:layout="@layout/fragment_biome_list"/>
    <Button
            android:text="@string/plus_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/buttonAddBiome"
            app:layout_constraintBottom_toBottomOf="@+id/imageWorld" android:onClick="onAddBiome"/>
</androidx.constraintlayout.widget.ConstraintLayout>
