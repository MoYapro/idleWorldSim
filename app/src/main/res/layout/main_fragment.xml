<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".app.ui.main.MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" tools:layout_editor_absoluteX="72dp" tools:layout_editor_absoluteY="280dp">
        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="61dp" android:background="@mipmap/ic_launcher_round"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="360dp"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView
                    android:id="@+id/resourcesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Resources" android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp" android:textStyle="bold"/>
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/resourceFragment"
                    android:name="de.moyapro.idleworldsim.app.ui.biome.ResourceFragment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="visible"
                    tools:visibility="visible">
                </androidx.fragment.app.FragmentContainerView>
                <TextView
                    android:id="@+id/speciesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="Species" android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="18sp" android:textStyle="bold"/>
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/speciesFragment"
                    android:name="de.moyapro.idleworldsim.app.ui.biome.SpeciesFragment" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
